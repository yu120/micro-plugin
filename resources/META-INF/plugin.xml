<idea-plugin>
    <id>org.micro.plugin</id>
    <name>Micro Service</name>
    <version>1.0.0</version>
    <vendor email="595208882@qq.com" url="http://www.yourcompany.com">Micro Service</vendor>

    <description><![CDATA[The Micro Service Framework.<br>]]></description>

    <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="173.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- add your extensions here -->
        <applicationConfigurable instance="org.micro.plugin.form.AutoCodeConfigForm"/>
    </extensions>

    <application-components>
        <!-- add your application components here -->
        <component>
            <implementation-class>org.micro.plugin.component.AutoCodeConfigComponent</implementation-class>
        </component>
    </application-components>

    <actions>
        <group id="MyPlugin.SampleMenu" text="Micro Service" description="Micro Service">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="Myplugin.Textboxes" class="org.micro.plugin.AutoCodeAction"
                    text="DB table to framework code" description="DB table to framework code"/>
        </group>
    </actions>

</idea-plugin>